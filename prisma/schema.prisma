generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  ADMIN
  EDITOR
}

model User {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique // Para login: "Administrador" o "Editor"
  password  String   // Se guardará encriptada
  role      Role     @default(EDITOR)
  createdAt DateTime @default(now())
}

model Article {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  summary     String?  @db.Text
  content     String   @db.Text
  
  // IMÁGENES
  mainImage   String?
  imageAuthor String?  @default("Redacción") // <--- NUEVO: Autor de la foto principal
  
  collage     String[] // <--- NUEVO: Array de URLs para el collage
  
  author      String?  @default("Redacción")
  columnName  String?
  section     String
  published   Boolean  @default(false)
  isFeatured  Boolean  @default(false) 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([section])
}

model SiteConfig {
  id               String @id @default("global")
  homeNewsCount    Int    @default(10)
  maxCollageImages Int    @default(6) // <--- NUEVO: Límite configurado por Admin
}

model Section {
  id    String @id @default(cuid())
  name  String
  slug  String @unique
}

model Author {
  id    String  @id @default(cuid())
  name  String
  image String? // Foto del autor
  bio   String?
}

model Column {
  id    String @id @default(cuid())
  name  String
}

// NUEVO MODELO
model ImageAuthor {
  id    String @id @default(cuid())
  name  String
}