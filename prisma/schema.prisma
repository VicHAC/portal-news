generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  ADMIN
  EDITOR
}

model User {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique // Para login: "Administrador" o "Editor"
  password  String   // Se guardará encriptada
  role      Role     @default(EDITOR)
  createdAt DateTime @default(now())
}

model Article {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  summary     String?
  mainImage   String?
  collage     String[]
  
  // --- NUEVO CAMPO ---
  publishedAt DateTime @default(now()) // Fecha editorial (la que tú eliges)
  
  createdAt   DateTime @default(now()) // Fecha de sistema (automática)
  updatedAt   DateTime @updatedAt
  
  // ... resto de relaciones (author, section, etc.)
  published   Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  
  section     String
  author      String?
  imageAuthor String?
  columnName  String?
}

model SiteConfig {
  id              String   @id @default("global")
  homeNewsCount   Int      @default(10)
  maxCollageImages Int     @default(6)
  
  // --- NUEVO CAMPO ---
  logoUrl         String?  // URL del logo subido
}

model Section {
  id    String @id @default(cuid())
  name  String
  slug  String @unique
  
  // NUEVOS CAMPOS
  color String @default("#2563eb") // Guardaremos el código HEX (ej: #FF0000)
  order Int    @default(0)         // Número para ordenar (1, 2, 3...)
}

model Author {
  id    String  @id @default(cuid())
  name  String
  image String? // Foto del autor
  bio   String?
}

model Column {
  id    String @id @default(cuid())
  name  String
}

// NUEVO MODELO
model ImageAuthor {
  id    String @id @default(cuid())
  name  String
}